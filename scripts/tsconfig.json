{
  "compilerOptions": {
    // Coding style
    "forceConsistentCasingInFileNames": true,
    "newLine": "LF",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    
    // Output
    "module": "commonjs",
    "target": "es5",
    "outDir": ".",
    "lib": ["es2017"]
  },
  "include": ["**/*.ts"],
  "exclude": []
}
